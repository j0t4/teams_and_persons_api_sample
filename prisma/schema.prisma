generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id        String  @id @default(uuid())
  name      String
  teams     Team[]

  @@map("persons")
}

model Team {
  id        String  @id @default(uuid())
  name      String
  members   Person[]
  meetings  Meeting[]

  @@map("teams")
}

model Meeting {
  id        String  @id @default(uuid())
  subject   String
  date      DateTime
  teamId    String
  team      Team      @relation(fields: [teamId], references: [id])
  attendees Person[]

  @@map("meetings")
}
